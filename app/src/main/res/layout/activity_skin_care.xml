<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkinCareActivity">

    <FrameLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/skinfragmentcontainer"
        android:layout_below="@+id/skintopnavigation"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/skintopnavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:itemBackground="?attr/colorButtonNormal"
        app:itemIconSize="30dp"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/skintop_nav" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/skincaregif"
        android:layout_below="@id/skinfragmentcontainer"
        android:layout_margin="20px" />
</RelativeLayout>