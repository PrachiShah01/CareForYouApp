<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneralTips"
    android:background="@drawable/gradient1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layoutfirst"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginBottom="444dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="162dp"
                android:layout_height="148dp"
                android:background="@color/cardview_shadow_end_color"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/weightloss"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/wieghtlossimage" />

                <View
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:background="@color/cardview_shadow_end_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tips for Weight Loss"
                    android:textColor="#283048"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="159dp"
                android:layout_height="143dp"
                android:layout_marginLeft="20dp"
                android:background="@color/cardview_shadow_end_color"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/skincare"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/skincareicon" />

                <View
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:background="@color/cardview_shadow_end_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skin Care"
                    android:textColor="#283048"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutsecond"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_below="@+id/layoutfirst"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutfirst"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="DuplicateIds">

            <LinearLayout
                android:layout_width="158dp"
                android:layout_height="145dp"
                android:background="@color/cardview_shadow_end_color"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/haircare"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/haircareicon" />

                <View
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:background="@color/cardview_shadow_end_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hair Care"
                    android:textColor="#283048"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="158dp"
                android:layout_height="142dp"
                android:layout_marginLeft="20dp"
                android:background="@color/cardview_shadow_end_color"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bodycare"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/healthybodyicon" />

                <View
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:background="@color/cardview_shadow_end_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body Care"
                    android:textColor="#283048"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>