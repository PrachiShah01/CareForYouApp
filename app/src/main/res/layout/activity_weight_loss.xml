<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeightLossActivity">

    <FrameLayout
        android:layout_margin="10dp"
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topnavigation"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/topnavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:itemBackground="?attr/colorButtonNormal"
        app:itemIconSize="30dp"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/top_nav" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/weightlossgif1"
        android:layout_below="@id/fragmentContainer"
        android:layout_margin="20px"
        />

</RelativeLayout>